<% if line_item == @current_item %>
<tr class="line-item-highlight">
<% else %>
<tr>
<% end %>
  <td class="text-right"><%= line_item.quantity %></td>
  <td>&times;</td>
  <td class="pr-2">
    <%= line_item.product.title %>
  </td>
  <td class="text-right font-bold">
    <%= number_to_currency(line_item.total_price) %>
  </td>
  <td>
    <%= button_to "-", decrement_line_item_path(line_item),
      method: :post,
      form_class: "inline",
      class: "ml-2 rounded py-1 px-2 bg-blue-600 hover:bg-blue-500 text-white text-sm font-bold" %>
  </td>
  <td>
    <%= button_to "Delete", line_item,
      method: :delete,
      form_class: "inline",
      class: "ml-2 rounded py-1 px-2 text-white bg-red-600 hover:bg-red-500 text-sm" %>
  </td>
</tr>
